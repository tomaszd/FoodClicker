<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/clickLogo"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/click_logo" />


    <Button
        android:id="@+id/btnInformacja"
        style="@style/wstazki_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:background="@drawable/wstazka_informacja"
        android:text="     Informacja" />

    <Button
        android:id="@+id/btnPiramida"
        style="@style/wstazki_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/wstazka_piramida"
        android:text="     Piramida" />

    <Button
        android:id="@+id/btnTabela"
        style="@style/wstazki_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/wstazka_tabela"
        android:scaleType="centerCrop"
        android:text="     Tabela" />

    <Button
        android:id="@+id/btnKasujDane"
        style="@style/wstazki_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/wstazka_kosz"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="     Kasuj Dane" />

</LinearLayout>

