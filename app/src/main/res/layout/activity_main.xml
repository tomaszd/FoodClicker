<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background"
    android:orientation="vertical">


    <EditText
        android:id="@+id/appCompatImageButton"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@drawable/chmurka"
        android:fontFamily="cursive"
        android:text="Gdy jesz lub pijesz\nKliknij w ikonki"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/kosz"
            android:text="KOSZ" />
        <TextView
            android:id="@+id/editWoda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_weight="2"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnWoda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/woda"
            android:text="Woda" />

        <ImageView
            android:id="@+id/btnInne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="4"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/posilki"
            android:text="Inne" />

        <TextView
            android:id="@+id/editInne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"


            android:layout_weight="2"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btnTabela"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/kosz"
            android:text="KOSZ" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/editWarzywa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"


            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnWarzywa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:layout_weight="1"
            android:src="@drawable/warzywa"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:text="Warzywa" />

        <ImageView
            android:id="@+id/btnOwoce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/banan"
            android:text="Owoce" />

        <TextView
            android:id="@+id/editOwoce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"


            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editRyby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"


            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnRyby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            
            android:src="@drawable/ryba"
            android:text="Ryby" />


        <ImageView
            android:id="@+id/btnOrzechy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/olejorzech"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:text="Orzechy" />

        <TextView
            android:id="@+id/editOrzechy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"


            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnPiramida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/piramida_logo"
            android:text="KOSZ" />

        <TextView
            android:id="@+id/editZboza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"


            android:layout_weight="2"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnZboza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/zboza"
            android:text="Zboza" />

        <ImageView
            android:id="@+id/btnNabial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"


            android:src="@drawable/nabial"
            android:text="Nabial" />

        <TextView
            android:id="@+id/editNabial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"


            android:layout_weight="2"
            android:fontFamily="cursive"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/kosz"
            android:text="KOSZ" />


    </LinearLayout>


</LinearLayout>