<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tekst_zliczanie"
            android:colorControlNormal="@color/colorWhite"
            android:subtitleTextColor="@color/colorWhite"
            android:theme="@style/MyMaterialTheme.Base"
            android:titleTextAppearance="@color/colorWhite"
            android:titleTextColor="@color/colorWhite" />

        <TextView
            android:id="@+id/appCompatImageButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/chmurka_ramka"
            android:gravity="center"
            android:text="@string/main_title"
            android:textAlignment="center"
            android:textColor="@color/tekst_zliczanie"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/settings"
                android:text="KOSZ" />

            <TextView
                android:id="@+id/editWoda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnWoda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/woda"
                android:text="Woda" />

            <ImageView
                android:id="@+id/btnInne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/posilki"
                android:text="Inne" />

            <TextView
                android:id="@+id/editInne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnTabela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/tabela"
                android:text="KOSZ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="2"

            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/editWarzywa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnWarzywa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/warzywa"
                android:text="Warzywa" />

            <ImageView
                android:id="@+id/btnOwoce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ananas"
                android:text="Owoce" />

            <TextView
                android:id="@+id/editOwoce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/editZboza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnZboza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/zboza"
                android:text="Zboza" />

            <ImageView
                android:id="@+id/btnNabial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"


                android:src="@drawable/nabial"
                android:text="Nabial" />

            <TextView
                android:id="@+id/editNabial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnPiramida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/piramida_logo"
                android:text="KOSZ" />

            <TextView
                android:id="@+id/editRyby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnRyby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                android:src="@drawable/ryba"
                android:text="Ryby" />


            <ImageView
                android:id="@+id/btnOrzechy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/olejorzech"
                android:text="Orzechy" />

            <TextView
                android:id="@+id/editOrzechy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"


                android:layout_weight="2"
                android:fontFamily="cursive"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/tekst_zliczanie"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/kosz"
                android:text="KOSZ" />


        </LinearLayout>

        <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            app:itemBackground="@color/tekst_zliczanie"
            app:itemIconTint="@color/colorWhite"
            app:itemTextColor="@color/colorWhite"
            app:menu="@menu/my_navigation_items" />
    </LinearLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:background="@color/tekst_zliczanie"
        android:fontFamily="casual"
        android:itemBackground="@color/tekst_zliczanie"
        app:headerLayout="@layout/nav_header"
        app:itemBackground="@color/tekst_zliczanie"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>




