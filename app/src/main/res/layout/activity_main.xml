<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_background"
    android:orientation="vertical">


    <EditText
        android:id="@+id/appCompatImageButton"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:background="@drawable/chmurka"
        android:text="Gdy jesz lub pijesz\nKliknij w ikonki"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/editWoda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textEnd"
            android:layout_gravity="end|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWoda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/woda"
            android:text="Woda" />

        <Button
            android:id="@+id/btnInne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/posilki"
            android:text="Inne" />

        <TextView
            android:id="@+id/editInne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textStart"
            android:layout_gravity="start|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_margin="0dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/editWarzywa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textEnd"
            android:layout_gravity="end|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWarzywa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/warzywa"
            android:text="Warzywa" />

        <Button
            android:id="@+id/btnOwoce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/banan"
            android:text="Owoce" />

        <TextView
            android:id="@+id/editOwoce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textStart"
            android:layout_gravity="start|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/editRyby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textEnd"
            android:layout_gravity="end|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRyby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ryba"
            android:text="Ryby" />


        <Button
            android:id="@+id/btnOrzechy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/olejorzech"
            android:text="Orzechy" />

        <TextView
            android:id="@+id/editOrzechy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textStart"
            android:layout_gravity="start|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/editZboza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textEnd"
            android:layout_gravity="end|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnZboza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/zboza"
            android:text="Zboza" />

        <Button
            android:id="@+id/btnNabial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/nabial"
            android:text="Nabial" />

        <TextView
            android:id="@+id/editNabial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="textStart"
            android:layout_gravity="start|center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />


    </LinearLayout>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:text="KOSZ" />
</LinearLayout>