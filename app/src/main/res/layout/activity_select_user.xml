<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnImage"

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/add_user" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewSelectUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:text="Select User"
        android:textAlignment="center"
        android:textColor="@color/tekst_zliczanie"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textUser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/tlo"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="User 1"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textUser2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/tlo"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="User 2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textUser3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/tlo"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="User 3"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textUser4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/tlo"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="User 4"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textUser5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/tlo"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="User 5"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/tlo"
            android:fontFamily="cursive"
            android:text=" Cancel "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/tekst_zliczanie"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/buttonSelectUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:backgroundTint="@color/tlo"
            android:fontFamily="cursive"
            android:text="  OK  "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/tekst_zliczanie"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        app:menu="@menu/my_navigation_items" />

</LinearLayout>

